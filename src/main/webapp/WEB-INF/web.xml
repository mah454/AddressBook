<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <description>SpringMVC and JNDI Sample Project</description>
    <resource-ref>
        <description>Database Connection</description>
        <res-ref-name>jdbc/jndi</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>address book</servlet-name>
        <servlet-class>org.tutorials.spring.servlet.ContactListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>address book</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
    <persistence-unit-ref>
        <persistence-unit-ref-name>addressbook</persistence-unit-ref-name>
    </persistence-unit-ref>
</web-app>
